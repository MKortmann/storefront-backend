{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start-nodemon": "nodemon src/server.ts",
    "start": "npm run docker && npm run start-nodemon",
    "forceStart": "docker-compose up --force-recreate && nodemon src/service.ts",
    "migrate:docker": "docker exec -it p-02-storefrontbackendapi-postgres-1 db-migrate up --config /app/config/database.json -e dev",
    "clean": "rm -rf dist",
    "build": "npx tsc",
    "docker": "docker-compose build && docker-compose up -d",
    "stop": "npm run stop-docker && npm run stop-nodemon",
    "stop-docker": "docker-compose down -v --remove-orphans",
    "stop-nodemon": "pkill -f nodemon",
    "delete-container": "docker-compose rm -f",
    "prettier": "prettier --write '**/*.ts'",
    "lint": "eslint . --ext .ts",
    "prod": "concurrently 'npm run start:prod' 'npm run watch:ts'",
    "start:prod": "nodemon --watch dist dist/server.js",
    "watch:ts": "tsc --watch",
    "test": "npm run build && jasmine --config=./jasmine.json",
    "test:watch": "jasmine --config=./jasmine.json --watch"
  },
  "author": "Marcelo Kortmann",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jasmine": "^4.3.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jasmine": "^5.0.2",
    "jasmine-console-reporter": "^3.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.5.1"
  }
}
